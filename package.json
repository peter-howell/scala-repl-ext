{
  "name": "scala-repl-ext",
  "displayName": "scala-repl-ext",
  "description": "send text from the editor to the scala repl",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scala-repl-ext.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "scala-repl.runScala",
        "title": "Run Scala"
      }
    ],
    "keybindings":[
      {
        "command": "scala-repl.runScala",
        "key": "cmd+enter",
        "when": "editorTextFocus && editor.hasSelection && editorLangId == 'scala' && terminal.active"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
